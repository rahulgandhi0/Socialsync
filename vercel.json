{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "@api_url",
    "VITE_SUPABASE_URL": "@supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "VITE_INSTAGRAM_APP_ID": "@instagram_app_id",
    "VITE_INSTAGRAM_APP_SECRET": "@instagram_app_secret",
    "VITE_INSTAGRAM_REDIRECT_URI": "@instagram_redirect_uri"
  }
} 